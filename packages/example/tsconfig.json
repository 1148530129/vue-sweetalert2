{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "es7",
      "es6",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "paths": {
      "vue-sweetaler2": [
        "../vue-sweetalert2/"
      ]
    }
  },
  "include": [
    "./src/*.vue",
    "./src/*.ts",
    "./src/*.js"
  ]
}